{
  "name": "shields-badge-url-npm-downloads",
  "version": "0.0.0",
  "description": "Creates Shields.io badge URLs for a package's NPM downloads.",
  "author": {
    "name": "Athan Reines",
    "email": "kgryte@gmail.com"
  },
  "contributors": [
    {
      "name": "Athan Reines",
      "email": "kgryte@gmail.com"
    }
  ],
  "bin": {
    "shields-npmd": "./bin/cli"
  },
  "scripts": {
    "test": "if [ \"${TRAVIS}\" ]; then npm run test-ci; else npm run test-local; fi",
    "test-local": "tape \"./test/*.js\" | tap-spec",
    "test-ci": "npm run test-local && xvfb-run npm run test-browsers",
    "test-cov": "istanbul cover --dir ./reports/coverage --report lcov tape -- \"./test/*.js\"",
    "test-browsers": "browserify ./test/*.js | testling | tap-spec",
    "coverage": "istanbul cover --dir ./reports/codecov/coverage --report lcovonly tape -- \"./test/*.js\" && cat ./reports/codecov/coverage/lcov.info | codecov && rm -rf ./reports/codecov"
  },
  "main": "./lib",
  "repository": {
    "type": "git",
    "url": "git://github.com/kgryte/shields-badge-url-npm-downloads.git"
  },
  "keywords": [
    "badge",
    "shields",
    "shield",
    "npm",
    "downloads",
    "metrics",
    "stats",
    "url",
    "image",
    "img",
    "readme",
    "docs",
    "status",
    "cli"
  ],
  "bugs": {
    "url": "https://github.com/kgryte/shields-badge-url-npm-downloads/issues"
  },
  "dependencies": {
    "minimist": "^1.2.0",
    "mustache": "^2.2.1",
    "pkginfo": "^0.3.1",
    "update-notifier": "^0.6.0",
    "validate.io-object": "^1.0.4",
    "validate.io-string-primitive": "^1.0.0"
  },
  "devDependencies": {
    "browserify": "12.x.x",
    "codecov.io": "^0.1.5",
    "istanbul": "^0.4.1",
    "jshint": "2.x.x",
    "jshint-stylish": "2.x.x",
    "npm-list-author-packages": "^2.0.1",
    "tap-spec": "4.x.x",
    "tape": "4.x.x",
    "testling": "1.x.x"
  },
  "testling": {
    "files": [
      "test/*.js"
    ],
    "browsers": [
      "iexplore/6.0..latest",
      "firefox/3.0..latest",
      "firefox/nightly",
      "chrome/4.0..latest",
      "chrome/canary",
      "opera/10.0..latest",
      "opera/next",
      "safari/4.0..latest",
      "ipad/6.0..latest",
      "iphone/6.0..latest",
      "android-browser/4.2..latest"
    ]
  },
  "license": "MIT"
}
